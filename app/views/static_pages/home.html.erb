<% provide :title,t("home") %>
  <% if logged_in? %>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render "shared/user_info" %>
        </section>
        <section class="micropost_form">
          <%= render "shared/micropost_form" %>
        </section>
      </aside>
      <div class="col-md-8">
        <h1> <%= t("feed") %> </h1>
        <%= render "shared/feed" %>
      </div>
    </div>
  <% else %>
    <div class="center jumbotron">
      <h1><%= t "hello" %></h1>
      <p>
        <%= t"intro" %> <a href="http://www.railstutorial.org/"><%= t "content" %></a>.
      </p>
      <%= link_to t("sign_now"), signup_path, class: "btn btn-lg btn-primary" %>
    </div>
    <%= link_to image_tag("rails.png", alt: "Rails logo"), "http://rubyonrails.org/" %>
  <% end %>
